
<h1>Wikis</h1>

<%= link_to 'New Wiki', new_wiki_path, class: 'btn btn-default pull-right btn-margin' %>


<table class="table table-bordered table-hover">
  <thead >
    <tr class="bg-primary">
      <th>Reference</th>
      <th>Title</th>
      <th>Body</th>
      <th>Private</th>
      <th>User</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each_with_index do |wiki, index| %>
      <tr>
        <% if !wiki.private || ( wiki.private && policy(wiki).view_private? )%>
            <td><%= index+1 %></td>
            <td><%= markdown(wiki.title) %></td>
            <td><%= markdown(wiki.body) %></td>
            <% if wiki.private %>
                <td>Private</td>
                <% else %>
                <td>Public</td>
            <% end %>
            <td><%= wiki.user.email %></td>
            <td><%= link_to 'Show', wiki %></td>
            <% if policy(wiki).update? %>
              <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
              <% else %>
              <td></td>
            <% end %>
            <% if policy(wiki).destroy? %>
              <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
              <td></td>
            <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
