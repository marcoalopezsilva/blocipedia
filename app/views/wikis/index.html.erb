<h1>Wikis</h1>

<table class="table table-bordered table-hover">
  <thead >
    <tr class="bg-primary">
      <th>Title</th>
      <th>Body</th>
      <th>Private</th>
      <th>User</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @wikis.each do |wiki| %>
      <tr>
        <td><%= wiki.title %></td>
        <td><%= wiki.body %></td>
        <td><%= wiki.private %></td>
        <td><%= wiki.user.email %></td>
        <td><%= link_to 'Show', wiki %></td>
        <% if user_can_edit?(wiki) %>
          <td><%= link_to 'Edit', edit_wiki_path(wiki) %></td>
          <td><%= link_to 'Destroy', wiki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% else %>
          <td> </td>
          <td> </td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Wiki', new_wiki_path %>
